set tabstop=3
set softtabstop=3
set shiftwidth=3
autocmd FileType elm setlocal tabstop=4 softtabstop=4 shiftwidth=4
autocmd FileType python setlocal tabstop=4 softtabstop=4 shiftwidth=4
filetype indent on
set expandtab

syntax on
